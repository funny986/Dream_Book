<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".RecordingFragment"
        android:id="@+id/fragment_recording_ready"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.494"
                  app:layout_constraintVertical_bias="0.026"
                  android:id="@+id/linearLayout">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:orientation="horizontal"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">


                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/RecordStyle"
                           android:src="@drawable/ic_aa"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/RecordStyle"
                                android:id="@+id/name_note_tv"
                                android:textSize="15dp"
                                android:maxLines="1"
                        />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/RecordStyle"

                           android:src="@drawable/ic_calendar"/>

                <TextView android:layout_width="88dp"
                          android:layout_height="wrap_content"
                          style="@style/RecordStyle"
                          android:id="@+id/date_tv"
                          android:text="Дата"
                          android:textColor="@color/colorPrimary"
                          android:textSize="15dp"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:background="@drawable/ramka_bottom"
                      android:orientation="horizontal"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/RecordStyle"

                       android:src="@drawable/ic_label"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/label_tv"
                      style="@style/RecordStyle"
                      android:textSize="@dimen/textSize"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="413dp"
                  android:layout_height="633dp"
                  android:orientation="vertical"
                  android:padding="@dimen/padd_text"
                  android:id="@+id/linearLayout2"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">

                <TextView android:layout_width="287dp"
                          android:layout_height="526dp"
                          android:id="@+id/record_tv"
                          android:layout_gravity="center_horizontal"
                          android:hint="Содержание"
                          android:textSize="15dp"
                          android:textColor="@color/colorPrimary"
                />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

