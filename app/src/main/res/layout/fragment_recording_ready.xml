<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_down"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".RecordingFragment"
        android:id="@+id/fragment_recording_ready"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.494"
                  app:layout_constraintVertical_bias="0.026"
                  android:id="@+id/linearLayout">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:orientation="horizontal"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">


                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/IcoRecordStyle"
                           android:src="@drawable/ic_aa"/>

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/RecordStyle"
                                android:id="@+id/name_note_tv"
                                android:maxLines="1"
                        />
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/IcoRecordStyle"
                           android:src="@drawable/ic_calendar"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/RecordStyle"
                          android:id="@+id/date_tv"
                          android:text="Дата"
                          android:textSize="@dimen/textSize_date"
                          />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:background="@drawable/ramka_bottom"
                      android:orientation="horizontal"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/IcoRecordStyle"
                       android:src="@drawable/ic_label"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/label_tv"
                      style="@style/RecordStyle"
                     />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="370dp"
                  android:layout_height="538dp"
                  android:orientation="vertical"
                  android:id="@+id/linearLayout2"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                  app:layout_constraintBottom_toBottomOf="parent"
                  android:layout_marginTop="32dp"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="340dp"
                  android:layout_height="461dp"
                  android:id="@+id/record_tv"
                  android:gravity="start"
                  android:layout_marginTop="30dp"
                  android:background="@null"
                  android:layout_gravity="center_horizontal"
                  android:textAppearance="@style/TextAppearanceEditText"
                  android:textSize="@dimen/textSize"
                  android:textColor="@color/primaryDarkColor"
                  android:hint="Содержание"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

