<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_down"
        android:id="@+id/fragment_recording"
        tools:context=".RecordingFragment">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.494"
                  app:layout_constraintVertical_bias="0.026"
                  android:id="@+id/linearLayout">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:orientation="horizontal"
        >


            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">


                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/IcoRecordStyle"
                           android:src="@drawable/ic_aa"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/name_note"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                        android:hint="@string/name_note"
                        android:textAppearance="@style/TextAppearanceEditText"
                        android:textColor="@color/colorEditMean"
                        android:layout_marginStart="5dp"
                        android:backgroundTint="@android:color/transparent"
                        android:textSize="@dimen/textSize_date"
                        tools:ignore="SpUsage"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@drawable/ramka_top"
                          android:layout_weight="0.5">

                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           style="@style/IcoRecordStyle"
                           android:src="@drawable/ic_calendar"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/date_tv"
                          style="@style/RecordStyle"
                          android:text="Дата"
                          android:textSize="@dimen/textSize_date"
                />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="@dimen/height_view"
                      android:background="@drawable/ramka_bottom"
                      android:orientation="horizontal"
        >

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       style="@style/IcoRecordStyle"
                       android:src="@drawable/ic_label"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/label_et"
                    android:inputType="text"
                    android:maxLines="1"
                    android:hint="Метки"
                    android:textAppearance="@style/TextAppearanceEditText"
                    android:textColor="@color/colorEditMean"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:textSize="@dimen/textSize_date"
                    tools:ignore="SpUsage"/>


        </LinearLayout>

    </LinearLayout>


    <EditText android:layout_width="0dp"
              android:layout_height="match_parent"
              android:id="@+id/record_et"
              android:gravity="start"
              android:background="@null"
              android:layout_gravity="center_horizontal"
              android:hint="Содержание"
              android:textAppearance="@style/TextAppearanceEditText"
              android:textSize="@dimen/textSize"
              android:textColor="@color/colorEditMean"
              android:inputType="textCapSentences|textMultiLine|textPersonName|textCapWords"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/linearLayout"
              android:layout_marginTop="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>

