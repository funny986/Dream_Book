<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        <TextView
                android:id="@+id/dialod_lastname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="45dp"/>

        <TextView
                android:id="@+id/dialod_firstname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

        <TextView
                android:id="@+id/dialod_middlename_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
        />

        <TextView
                android:id="@+id/dialod_positionname_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Position"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:layout_marginTop="10dp"/>


        <TextView
                android:id="@+id/dialog_phone_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Phone Number"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:id="@+id/dialog_inner_phone_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Inner Number"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>


        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

            <Button
                    android:id="@+id/dialog_button_name"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:text="Позвонить"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    tools:ignore="RtlCompat,SmallSp"/>
            <Button
                    android:id="@+id/dialog_button_message"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_width="140dp"
                    android:layout_height="45dp"
                    android:text="СМС"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="start"
                    tools:ignore="RtlCompat,SmallSp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
