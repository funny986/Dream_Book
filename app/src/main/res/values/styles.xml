<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

<!--        Theme.MaterialComponents.Light.Bridge-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search_24</item>
        <item name="closeIcon">@drawable/ic_clear_24</item>
        <item name="queryHint">@string/search_hint</item>
        <item name="android:imeActionId">6</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAppearance">@color/colorPrimaryDark</item>
        <item name="textAllCaps">true</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Стиль отображения текста в listView -->

<style name="MeanStyle">
        <item name="android:textSize">@dimen/txt_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">@dimen/text_margin</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="fontFamily">@font/flowext</item>

</style>


